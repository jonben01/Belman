<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="453.0" prefWidth="368.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controllers.UserCreationController">
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
    <children>
        <VBox layoutX="26.0" layoutY="60.0" prefHeight="316.0" prefWidth="318.0" spacing="6.0">
            <children>
                <Label text="Username" />
                <TextField fx:id="txtUsername" promptText="insert username" />
                <Label text="Password" />
                <TextField fx:id="txtPassword" promptText="insert user password" />
                <HBox prefHeight="62.0" prefWidth="318.0">
                    <children>
                        <VBox prefHeight="62.0" prefWidth="119.0">
                            <children>
                                <Label text="First Name" />
                                <TextField fx:id="txtFirstName" minWidth="125.0" prefHeight="26.0" prefWidth="143.0" promptText="insert first name" />
                            </children>
                        </VBox>
                        <Region prefHeight="62.0" prefWidth="3.0" HBox.hgrow="ALWAYS" />
                        <VBox prefHeight="62.0" prefWidth="176.0">
                            <children>
                                <Label text="Last Name" />
                                <TextField fx:id="txtLastName" minWidth="180.0" promptText="insert last name" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox prefHeight="55.0" prefWidth="318.0">
                    <children>
                        <VBox prefHeight="54.0" prefWidth="122.0">
                            <children>
                                <Label text="Phone Number" />
                                <TextField fx:id="txtPhone" maxWidth="120.0" minWidth="125.0" promptText="insert phone number" />
                            </children>
                        </VBox>
                        <Region prefHeight="62.0" prefWidth="3.0" HBox.hgrow="ALWAYS" />
                        <VBox prefHeight="68.0" prefWidth="178.0">
                            <children>
                                <Label text="Email Address" />
                                <TextField fx:id="txtEmail" maxWidth="180.0" minWidth="180.0" prefWidth="180.0" promptText="insert email address" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label text="Role" />
                <ComboBox fx:id="cmbRole" prefHeight="26.0" prefWidth="318.0" />
            </children>
        </VBox>
        <Label layoutX="27.0" layoutY="25.0" text="Create User" />
        <Button fx:id="btnCloseWindow" layoutX="321.0" layoutY="21.0" mnemonicParsing="false" onAction="#handleCloseWindow" text="X" />
        <Button fx:id="btnCancel" layoutX="193.0" layoutY="388.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="34.0" prefWidth="150.0" text="Cancel" />
        <Button fx:id="btnCreate" layoutX="26.0" layoutY="388.0" mnemonicParsing="false" onAction="#handleCreate" prefHeight="34.0" prefWidth="150.0" text="Create" />
    </children>
</AnchorPane>
